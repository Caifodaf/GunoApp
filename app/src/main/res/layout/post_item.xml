<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        app:cardCornerRadius="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/purple_04">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="1dp">

            <ImageView
                android:id="@+id/iv_avatar_user_post"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/doge" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@id/tv_time_created_post"
                android:layout_toEndOf="@id/iv_avatar_user_post"
                android:layout_alignTop="@id/tv_time_created_post"
                android:layout_alignBottom="@id/tv_time_created_post"
                android:background="@drawable/rectangle_rounded_all_28"
                android:backgroundTint="@color/white"
                android:alpha="0.2"
                android:layout_marginStart="8dp"
                />

            <TextView
                android:id="@+id/tv_time_created_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@+id/iv_avatar_user_post"
                android:elevation="10dp"
                android:fontFamily="@font/font_medium"
                android:letterSpacing="-0.02"
                android:padding="20dp"
                android:text="7 мин"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/iv_favorite"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/ic_star_small" />

            <TextView
                android:id="@+id/tv_genres_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_avatar_user_post"
                android:layout_marginStart="20dp"
                android:layout_marginTop="140dp"
                android:fontFamily="@font/font_medium"
                android:letterSpacing="-0.02"
                android:text="Творчество"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_title_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_genres_post"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="70dp"
                android:fontFamily="@font/font_bold"
                android:letterSpacing="-0.02"
                android:maxLines="3"
                android:text="Как выйти из кризиса идей если всё совсем плохо?"
                android:textColor="@color/white"
                android:textSize="28sp" />


        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</FrameLayout>