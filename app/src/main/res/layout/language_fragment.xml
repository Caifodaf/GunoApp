<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.core.widget.NestedScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:scrollbars="none"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:id="@+id/rl_main_block"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="50dp"
            >

            <View android:id="@+id/strut"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_bold"
                android:letterSpacing="-0.02"
                android:text="Язык"
                android:textColor="@color/black"
                android:textSize="32sp" />

            <LinearLayout
                android:id="@+id/ll_en_en_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_title"
                android:layout_alignRight="@id/strut"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="6dp"
                android:background="@drawable/rectangle_rounded_all_20_gray"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingTop="36dp"
                android:paddingEnd="16dp"
                android:paddingBottom="16dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/ic_en" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="🇬🇧"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/font_semi_bold"
                    android:letterSpacing="-0.02"
                    android:maxLines="2"
                    android:text="English"
                    android:textColor="@color/grey_07"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_ru_ru_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_title"
                android:layout_alignStart="@id/strut"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="6dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/rectangle_rounded_all_20_line_gray"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingTop="36dp"
                android:paddingEnd="16dp"
                android:paddingBottom="16dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/ic_ru" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="🇷🇺"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/font_semi_bold"
                    android:letterSpacing="-0.02"
                    android:maxLines="2"
                    android:text="Русский"
                    android:textColor="@color/grey_07"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_fr_fr_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_en_en_btn"
                android:layout_alignEnd="@id/strut"
                android:layout_alignParentStart="true"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="6dp"
                android:background="@drawable/rectangle_rounded_all_20_gray"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingTop="36dp"
                android:paddingEnd="16dp"
                android:paddingBottom="16dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/ic_fr" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="🇫🇷"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/font_semi_bold"
                    android:letterSpacing="-0.02"
                    android:maxLines="2"
                    android:text="Français"
                    android:textColor="@color/grey_07"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_es_es_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_en_en_btn"
                android:layout_alignStart="@id/strut"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="6dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/rectangle_rounded_all_20_gray"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingTop="36dp"
                android:paddingEnd="16dp"
                android:paddingBottom="16dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/ic_es" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="🇪🇸"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/font_semi_bold"
                    android:letterSpacing="-0.02"
                    android:maxLines="2"
                    android:text="Español"
                    android:textColor="@color/grey_07"
                    android:textSize="16sp" />

            </LinearLayout>


        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>