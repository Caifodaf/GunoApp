<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<!--    <data>-->
<!--        <variable-->
<!--            name="itemViewModel"-->
<!--            type="ru.android.emotionapp.ui.home.viewmodel.recyclerview.exp.PostViewModel" />-->
<!--    </data>-->

    <data>
        <import type="android.view.View" />
        <variable
            name="newpost"
            type="ru.android.emotionapp.data.model.PostsHomeModel" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_base_item"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        app:cardCornerRadius="30dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@color/purple_04">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="1dp">

            <ImageView
                android:id="@+id/iv_avatar_user_post"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:src="@{newpost.imageSrcLink}" />

<!--            app:image="@{newPost.imageSrcLink}"-->

            <View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@id/tv_time_created_post"
                android:layout_toEndOf="@id/iv_avatar_user_post"
                android:layout_alignTop="@id/tv_time_created_post"
                android:layout_alignBottom="@id/tv_time_created_post"
                android:background="@drawable/rectangle_rounded_all_28"
                android:backgroundTint="@color/white"
                android:alpha="0.2"
                android:layout_marginStart="8dp"
                />

            <TextView
                android:id="@+id/tv_time_created_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_toEndOf="@+id/iv_avatar_user_post"
                android:elevation="10dp"
                android:fontFamily="@font/font_medium"
                android:letterSpacing="-0.02"
                android:padding="15dp"
                android:text="@{newpost.timeRead}"
                android:textColor="@color/white"
                android:textSize="12sp"
                tools:text="7 min" />

            <ImageView
                android:id="@+id/iv_favorite"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/ic_star_small" />
<!--                app:tint="@{newPost.favorite == 1 ? @color/yellow_01 : @color/white}" -->


            <TextView
                android:id="@+id/tv_genres_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_avatar_user_post"
                android:layout_marginStart="20dp"
                android:layout_marginTop="140dp"
                android:fontFamily="@font/font_medium"
                android:letterSpacing="-0.02"
                android:text="@{newpost.genre}"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="12sp"
                tools:text="Romance" />

            <TextView
                android:id="@+id/tv_title_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_genres_post"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="70dp"
                android:fontFamily="@font/font_bold"
                android:letterSpacing="-0.02"
                android:maxLines="3"
                android:text="@{newpost.title}"
                android:textColor="@color/white"
                android:textSize="28sp"
                tools:text="Hello" />


        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</layout>